root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,py}]
tab_width = 2
indent_size = 2
indent_style = space
trim_trailing_whitespace = false

[*.{sh,bash,csh,zsh,nu,fish,ps1,txt,md,json,conf,xml}]
indent_size = 4
indent_style = space
